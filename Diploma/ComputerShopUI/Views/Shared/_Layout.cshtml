    <title>Computer Shop</title>
</head>
<body class="form-signin bg-white">
<nav class="navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <div class="col-md-8">
            <a asp-action="HomePage" asp-route-username="@Model.UserName" class="navbar-brand" >Computer Shop</a>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            @{
                if (Model.UserName != null)
                {
                    <li>
                        <a asp-action="UserPage" asp-controller="Home" asp-route-username="@Model.UserName" class="btn btn-light">@Model.UserName</a>    
                    </li>
                    <li>
                        <a class="btn btn-light" href="#">Выход</a>    
                    </li>
                    <li>
                        <a class="btn btn-light" href="#">Корзина</a>    
                    </li>
                }
                else
                {
                    <li>
                        <a asp-action="Login" asp-controller="Account" class="btn btn-light" >Войти</a>    
                    </li>
                    <li>
                        <a asp-action="Registration" asp-controller="Account" class="btn btn-light" >Регистрация</a>    
                    </li>
                }
            }
        </div>
    </div>
</nav>

<div class="container mt-5">
    <form asp-action="SearchCatalog" class="d-flex">
        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search" name="search">
        <button class="btn btn-outline-dark" type="submit">Поиск</button>
    </form>
</div>
@RenderBody()

